@model  kuujinbo.ASP.NET.Mvc.Misc.Services.JqueryDataTables.Table

<div id='datatable-success-error-modal'></div>

<h2>@ViewBag.Title</h2>

@Html.AntiForgeryToken()
@* element id selector used in /scripts/DataTables/jQDataTablesIndex.js *@
<div id='data-table-actions' style='margin:10px 0;'>
    @Html.Raw(@Model.ActionButtonsHtml())
</div>

<table id='jquery-data-table' class='table table-striped compact'>
    @Html.Raw(@Model.GetTableHtml())
</table>

@section scripts
{
    <script type='text/javascript'>
        var configValues = @Html.Raw(@Model.GetJavaScriptConfig());
    </script>
    @Scripts.Render("~/bundles/jQueryDataTables")
}