@model kuujinbo.ASP.NET.Mvc.Misc.Controllers.ReportParams

@*tabindex attributes are to fix IE's horribly broken focus() issues....*@
@using (Html.BeginForm("Index", "Reports", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class='container' style='width:400px' >
        <div class='row margin-top-bottom-8'>
            <div class='col-sm-2'>
                <label for='Start'>Start</label>
            </div>
            <div class='col-sm-10'>
                <input tabindex='-1' class='form-control input-sm date' type='text' name='Start' id='Start' />
            </div>
        </div>
        <div class='row margin-top-bottom-8'>
            <div class='col-sm-2'>
                <label for='End'>End</label>
            </div>
            <div class='col-sm-10'>
                <input tabindex='-2' class='form-control input-sm date' type='text' name='End' id='End' />
            </div>
        </div>

        <div class='row margin-top-bottom-8'>
            <div class='col-sm-2'></div>
            <div class='col-sm-10'>
                <input tabindex='-3' type='submit' class='btn btn-primary' value='Get Report' />
            </div>
        </div>
    </div>
}
<script type='text/javascript'>
    $('input.date[type=text]').datepicker({
        dateFormat: 'yy/mm/dd',
        changeYear: true, changeMonth: true
    });
</script>