@{ 
    ViewBag.TerminatorTimeout = 5;
    ViewBag.Title = "Accepted";
}

<div class='jumbotron'>
    <h1>Accepted Site Terms</h1>

    <p>This site has a @ViewBag.TerminatorTimeout second session inactive timeout. I.e., you do not interact with the page within the @ViewBag.TerminatorTimeout second threshhold, you will be logged out of the application.</p>

    <a href='@Url.Action("Logout", "NoticeAndConsent")' class="btn btn-primary">Log Out</a>
</div>